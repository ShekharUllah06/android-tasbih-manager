    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev_station.dhikrmanager.activity.ItemListActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNoItem"
        android:layout_width="match_parent"
